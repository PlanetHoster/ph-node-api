{
  "name": "@planethoster-oss/api",
  "version": "1.1.0",
  "description": "NodeJS PlanetHoster api integration",
  "repository": "https://github.com/PlanetHoster/ph-node-api.git",
  "license": "MIT",
  "private": false,
  "main": "./build/main.js",
  "publishConfig": {
    "access": "public"
  },
  "typings": "./build/main.d.ts",
  "files": [
    "build/**/**/*"
