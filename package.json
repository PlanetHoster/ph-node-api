  },
  "devDependencies": {
    "@tsconfig/node16": "1.0.4",
    "@types/node": "22.18.10",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "eslint": "9.38.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-promise": "7.2.1",
    "typescript": "5.0.4"
  }
}
